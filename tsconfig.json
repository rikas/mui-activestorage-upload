{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2015",
    "module": "esnext",
    "declaration": true,
    "strict": true,
    "outDir": "./lib",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
